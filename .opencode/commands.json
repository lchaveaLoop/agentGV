{
  "commands": {
    "preference": {
      "description": "Set model preference mode",
      "usage": "/preference [quality|balanced|cost]",
      "action": "update_config",
      "config_path": ".opencode/models.json",
      "options": {
        "quality": {
          "mode": "quality_priority",
          "message": "✅ Quality priority mode enabled - Complex tasks will use qwen3-max"
        },
        "balanced": {
          "mode": "balanced",
          "message": "✅ Balanced mode enabled - Auto-select based on task type"
        },
        "cost": {
          "mode": "cost_saving",
          "message": "✅ Cost saving mode enabled - Prefer economical models"
        }
      }
    },
    "stats": {
      "description": "View model usage statistics",
      "usage": "/stats [reset]",
      "action": "read_file",
      "config_path": ".opencode/usage-stats.json",
      "options": {
        "reset": {
          "action": "reset_stats",
          "message": "✅ Usage statistics reset for new period"
        }
      }
    },
    "models": {
      "description": "List available models",
      "usage": "/models",
      "action": "read_config",
      "config_path": ".opencode/models.json",
      "section": "models"
    }
  }
}
